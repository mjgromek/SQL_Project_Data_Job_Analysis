SELECT name AS comapany_name
FROM company_dim
WHERE company_id IN (
     SELECT
        company_id
    FROM 
        job_postings_fact
    WHERE
        job_no_degree_mention = true
    ORDER BY company_id
)

WITH company_job_count AS (
    SELECT 
            company_id,
            COUNT(*)
    FROM
            job_postings_fact
    GROUP BY
            company_id
)

SELECT *
FROM company_job_count
